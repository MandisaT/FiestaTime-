<div class="wrapper">
<table class="center">
<tr>
	<center><h3 class="font event">Your Event Details</h3>

	<th>Event Name</th>
	<th> Date</th>
	<th>Buget</th>
	<th>Total Cost</th>
	<th>Remaining Budget</th>
</tr>

<tr>
<td><%= @event.name %></td>
<td><%= @event.date%></td>
<td>$<%= @event.budget%></td>
<td> $<%= @total %></td>
<td> $<%= @wallet%></td>
</tr>
</table>
 
<%= link_to "Delete", event_path, method: :delete ,class: 'css_class', style: 'color:#FFFFFF'%>

<%=link_to  "Edit" , edit_event_path(@event),class: 'css_class', style: 'color:#FFFFFF'%>

 <div class="invite"><%= render 'invites/invite_info' %>
 </div>


 <div class = "product"><%= render 'products/product_info' %></div>

<p title="in items needed for your event" class="tooltip">Create needed items to calculate party cost.</p>
<button class="button1"><h3>Create a GuestList</h3> </button>
<div class=" showguest"><%=link_to  "Show Guest Your List" , invites_path(:event_id => @event.id), class: 'css_class', style: 'color:#FFFFFF'%></div>

<p title="in items needed for your event" class="tooltip2">Add guest to calculate attendees.</p>
<button class="button2"><h3>Create Items</h3></button>
 <br>
 <div class="showinvite"><%=link_to  "Show Your Products" , products_path(:event_id => @event.id),class: 'css_class', style: 'color:#FFFFFF'%></div>

</div>


